{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "outDir": "bin",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "reflect-metadata"
    ],
    "allowJs": false,
    "typeRoots": [ "@types", "./types" ],
    "baseUrl": "types"
  },
  "exclude": [
    "node_modules",
    "elm-stuff",
    "public",
    "client",
    "webpack.config.js"
  ],
  "compileOnSave": true
}